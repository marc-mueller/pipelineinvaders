{
  "compilerOptions": {
    "target": "es6",  // Set to ES6 or later to support modern JavaScript features like Promises
    "lib": ["es6", "dom"],  // Include ES2015 for Promises and DOM for browser APIs
    "outDir": "./dist",         // Directory for the compiled output
    "rootDir": "./src",         // Root directory for input files
    "strict": true,             // Enable strict type checking
    "esModuleInterop": true,     // Enable compatibility with CommonJS modules
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true, // This can help skip type checking of .d.ts files in node_modules
    "types": ["jest", "node"],
  },
  "include": ["src/**/*"],       // Include all files in the src folder
  "exclude": ["node_modules"]    // Exclude the node_modules folder
}
