{
  "compilerOptions": {
    "target": "es6",  // Set to ES6 or later to support modern JavaScript features like Promises
    "lib": ["es2015", "dom"],  // Include ES2015 for Promises and DOM for browser APIs
    "outDir": "./dist",         // Directory for the compiled output
    "rootDir": "./src",         // Root directory for input files
    "strict": true,             // Enable strict type checking
    "esModuleInterop": true     // Enable compatibility with CommonJS modules
  },
  "include": ["src/**/*"],       // Include all files in the src folder
  "exclude": ["node_modules"]    // Exclude the node_modules folder
}
